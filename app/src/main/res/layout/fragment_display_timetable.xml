<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#009688"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:text="课程表"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="right"
            android:text="第" />

        <Spinner
            android:id="@+id/spinner_currentweek"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="left"
            android:text="周" />

        <Button
            android:id="@+id/button_set_alarm"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="为本周课程设置提醒"
            android:textAllCaps="false"
            android:textSize="10sp" />
    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp">

        <TextView
            android:id="@+id/textView_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/coursetable_data_borader"
            android:gravity="center"
            android:textColor="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/monday_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/coursetable_data_borader"
            android:gravity="center"
            android:text="星期一"
            android:textColor="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tuesday_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/coursetable_data_borader"
            android:gravity="center"
            android:text="星期二"
            android:textColor="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/wednesday_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/coursetable_data_borader"
            android:gravity="center"
            android:text="星期三"
            android:textColor="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/thursday_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/coursetable_data_borader"
            android:gravity="center"
            android:text="星期四"
            android:textColor="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/friday_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/coursetable_data_borader"
            android:gravity="center"
            android:text="星期五"
            android:textColor="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/saturday_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/coursetable_data_borader"
            android:gravity="center"
            android:text="星期六"
            android:textColor="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sunday_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/coursetable_data_borader"
            android:gravity="center"
            android:text="星期天"
            android:textColor="#000000"
            android:visibility="visible" />

    </TableRow>

    <include
        layout="@layout/layout_coursetables"
        />

</LinearLayout>